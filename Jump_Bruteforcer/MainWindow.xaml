<Window x:Class="Jump_Bruteforcer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jump_Bruteforcer" d:DataContext="{d:DesignInstance Type=local:Search}"
        mc:Ignorable="d"
        Title="Window1" Height="700" Width="1200">
    <Window.Resources>
        <local:CoordinatePointConverter x:Key="PointConverter"/>
    </Window.Resources>
    <Canvas x:Name="CanvasWindow">
        <Button Content="Import Map"  Click="ButtonSelectJMap_Click" Canvas.Left="10" Canvas.Top="10"/>
        <Button Content="Toggle Heatmap"  Click="ButtonToggleHeatmap_Click" Canvas.Left="984" Canvas.Top="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="LabelFileName" Canvas.Left="184" Canvas.Top="5" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <StackPanel Orientation="Horizontal" Canvas.Left="280" Canvas.Top="5">
            <Label Content="Start x" />
            <TextBox Height="20" TextWrapping="Wrap" Text="{Binding StartX}" Width="79"/>
            <Label Content="Start y"/>
            <TextBox Height="20" TextWrapping="Wrap" Text="{Binding StartY}" Width="79"/>
            <Label Content="Goal x" />
            <TextBox Height="20" TextWrapping="Wrap" Text="{Binding GoalX}" Width="79"/>
            <Label Content="Goal y"/>
            <TextBox Height="20" TextWrapping="Wrap" Text="{Binding GoalY}" Width="78"/>
            <Label Content="Start VSpeed"/>
            <TextBox Height="20" TextWrapping="Wrap" Text="{Binding StartingVSpeed}" Width="78"/>


        </StackPanel>
        <Grid Width="210" Height="80" Canvas.Left="930" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Content="Start Facing Right" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <CheckBox IsChecked="{Binding StartFacingRight}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" />
            <Label Content="Start FaceScraper" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <CheckBox IsChecked="{Binding StartScraper}"  Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" />
            <Label Content="Start Djump" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <CheckBox IsChecked="{Binding StartDJump}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" />
        </Grid>

        <StackPanel Orientation="Horizontal" Canvas.Top="90" Canvas.Left="870">
            <Label Content="Nodes Visited"/>
            <Label Content="{Binding NodesVisited}"/>
            <Label Content="Time Taken"/>
            <Label Content="{Binding TimeTaken}"/>
        </StackPanel>
        <Image x:Name="ImageJMap"  Width="801" Height="609" Canvas.Left="50" Canvas.Top="38" MouseLeftButtonDown="ImageJMap_MouseLeftButtonDown" MouseRightButtonDown="ImageJMap_MouseRightButtonDown"/>
        <Image x:Name="ImageHeatMap"  Width="801" Height="609" Canvas.Left="50" Canvas.Top="38" MouseLeftButtonDown="ImageJMap_MouseLeftButtonDown" MouseRightButtonDown="ImageJMap_MouseRightButtonDown"/>
        <Polyline x:Name="SolutionPath" Stroke="Green" StrokeThickness="2" Canvas.Left="50" Canvas.Top="38" Points="{Binding PlayerPath}"/>
        <Path Stroke="DarkGoldenrod" Fill="DarkGoldenrod" Canvas.Left="50" Canvas.Top="38">
            <Path.Data>
                <EllipseGeometry RadiusX="5" RadiusY="5" >
                    <EllipseGeometry.Center>
                        <MultiBinding Converter="{StaticResource PointConverter}">
                            <Binding Path="StartX"/>
                            <Binding Path="StartY"/>
                        </MultiBinding>
                    </EllipseGeometry.Center>
                </EllipseGeometry>
            </Path.Data>
        </Path>
        <Path Stroke="DarkGreen" Fill="DarkGreen" Canvas.Left="50" Canvas.Top="38">
            <Path.Data>
                <EllipseGeometry RadiusX="5" RadiusY="5" >
                    <EllipseGeometry.Center>
                        <MultiBinding Converter="{StaticResource PointConverter}">
                            <Binding Path="GoalX"/>
                            <Binding Path="GoalY"/>
                        </MultiBinding>
                    </EllipseGeometry.Center>
                </EllipseGeometry>
            </Path.Data>
        </Path>
        <Button Content="Start Search" Click="ButtonStartSearch_Click" Height="28" Canvas.Left="90" Canvas.Top="5" Width="89" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <ScrollViewer Canvas.Left="870"  Canvas.Top="172" Height="600"  Width="229" Content="{Binding Strat}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="CopyMacroButton" Content="Copy Macro" Canvas.Left="1060" Canvas.Top="10" Click="CopyMacroButton_Click"/>
        <Button Content="Bruteforce Project" Height="19" Canvas.Left="870" Canvas.Top="121" Width="100" Click="BruteforceProjectButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Canvas>
</Window>
